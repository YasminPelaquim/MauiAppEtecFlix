<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEtecFlix.Categorias.Comedia"
             Title="Comedia"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300, 300, 300"
                  ColumnDefinitions="*, *"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Source="gente.jpg" x:Name="btnGente" Clicked="btnGente_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Source="paris.jpg" x:Name="btnParis" Clicked="btnParis_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Source="juntos.jpg" x:Name="btnJuntos" Clicked="btnJuntos_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Source="sexta.jpg" x:Name="btnSexta" Clicked="btnSexta_Clicked" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
   
</ContentPage>