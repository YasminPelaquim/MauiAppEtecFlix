<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEtecFlix.Categorias.Nacional"
             Title="Nacional"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Source="minhamae.jpeg" x:Name="btnMinhamae" Clicked="btnMinhamae_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Source="auto.jpeg" x:Name="btnAuto" Clicked="btnAuto_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Source="quehoras.jpeg" x:Name="btnQuehoras" Clicked="btnQuehoras_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Source="hoje.jpeg" x:Name="btnHoje" Clicked="btnHoje_Clicked" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>