<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEtecFlix.Categorias.Terror"
             Title="Terror"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Source="exorcista.jpg" x:Name="btnExorcista" Clicked="btnExorcista_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Source="terrifier.jpg" x:Name="btnTerrifier" Clicked="btnTerrifier_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Source="mortedemonio.jpg" x:Name="btnMortedemonio"  Clicked="btnMortedemonio_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Source="toc.jpg" x:Name="btnToc" Clicked="btnToc_Clicked" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>