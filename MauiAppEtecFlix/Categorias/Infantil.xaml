<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEtecFlix.Categorias.Infantil"
             Title="Infantil"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Source="luck.jpg" x:Name="btnLuck" Clicked="btnLuck_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Source="elementos.jpg" x:Name="btnElementos" Clicked="btnElementos_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Source="wonka.jpg" x:Name="btnWonka" Clicked="btnWonka_Clicked"/>
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Source="wish.jpg" x:Name="btnWish" Clicked="btnWish_Clicked" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>