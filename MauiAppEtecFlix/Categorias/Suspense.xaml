<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEtecFlix.Categorias.Suspense"
             Title="Suspense"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Source="telefone.jpg" x:Name="btnTelefone" Clicked="btnTelefone_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Source="noite.jpg" x:Name="btnNoite" Clicked="btnNoite_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Source="mulher.jpg" x:Name="btnMulher" Clicked="btnMulher_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Source="queda.jpg" x:Name="btnQueda" Clicked="btnQueda_Clicked" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>