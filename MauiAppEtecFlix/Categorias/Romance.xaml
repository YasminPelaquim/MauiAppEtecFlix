<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEtecFlix.Categorias.Romance"
             Title="Romance"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Source="comoeuera.jpeg" x:Name="btnComoeuera" Clicked="btnComoeuera_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Source="dezcoisas.jpeg" x:Name="btnDezcoisas" Clicked="btnDezcoisas_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Source="cinco.jpeg" x:Name="btnCinco" Clicked="btnCinco_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Source="todos.jpeg" x:Name="btnTodos" Clicked="btnTodos_Clicked" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>