<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEtecFlix.Categorias.Ficcao"
             Title="Ficcao"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Source="planeta.jpg" x:Name="btnPlaneta" Clicked="btnPlaneta_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Source="duna.jpg" x:Name="btnDuna" Clicked="btnDuna_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Source="maze.jpg" x:Name="btnMaze" Clicked="btnMaze_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Source="adam.jpg" x:Name="btnAdam" Clicked="btnAdam_Clicked" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>