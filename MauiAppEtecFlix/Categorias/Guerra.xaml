<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MauiAppEtecFlix.Categorias.Guerra"
             Title="Guerra"
             BackgroundColor="#2f2f30">
    <VerticalStackLayout>
        <ScrollView>
            <Grid RowDefinitions="300,300,300"
                  ColumnDefinitions="*,*"
                  Padding="5">
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="0" Source="homem.jpeg" x:Name="btnHomem" Clicked="btnHomem_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="0" Source="troia.jpeg" x:Name="btnTroia" Clicked="btnTroia_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="0" Grid.Row="1" Source="pearl.jpeg" x:Name="btnPearl" Clicked="btnPearl_Clicked" />
                <ImageButton Aspect="AspectFill" Grid.Column="1" Grid.Row="1" Source="menina.jpeg" x:Name="btnMenina" Clicked="btnMenina_Clicked" />
            </Grid>
        </ScrollView>
    </VerticalStackLayout>
</ContentPage>